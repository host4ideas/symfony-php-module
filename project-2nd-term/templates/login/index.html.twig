{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hello
			{{ controller_name }}! âœ…</h1>

		<form action={{path('login')}} method="post">
			<label for="username">Email:</label>
			<input type="text" id="username" name="_username"/>

			<label for="password">Password:</label>
			<input
			type="password" id="password" name="_password"/>

			{# If you want to control the URL the user is redirected to on success <input type="hidden" name="_target_path" value="/account"/> #}

			<button type="submit">login</button>
		</form>
	</div>
{% endblock %}
